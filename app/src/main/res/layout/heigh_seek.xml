<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_seekbar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray_light"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/up_height"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_size_text_up"/>

            <ru.developer.press.mytable.table.views.VerticalSeekBar
                android:id="@+id/seekBar_height_cell"
                android:layout_width="40dp"
                android:layout_height="200dp"
                android:background="@android:color/transparent"
                android:max="300"
                android:rotation="180"
                app:tickMarkTint="@color/colorAccent"/>

            <ImageButton
                android:id="@+id/down_height"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:rotation="180"
                app:srcCompat="@drawable/ic_size_text_up"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>