<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_seekbar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray_light"
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/left_width"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:rotation="-90"
                    app:srcCompat="@drawable/ic_size_text_up"/>

                <SeekBar
                    android:id="@+id/seekBar_height_cell"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:tickMarkTint="@color/colorAccent"/>

                <ImageButton
                    android:id="@+id/right_width"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:rotation="90"
                    app:srcCompat="@drawable/ic_size_text_up"/>

                <ImageButton
                    android:id="@+id/width_for_screen_button"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_resize_width_for_screen"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>